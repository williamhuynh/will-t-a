<div class = "row">
  <div class = "col-md-3">
    <div class = "panel panel-default">
      <div class = "panel-body">
        
        <div class = "text-center">
        <%= fa_icon "user 5x" %>
        <h2>
          <%= @profile.first_name %>
        </h2>
        <p>
          <%= link_to 'Edit Profile', edit_profile_path(@profile) %>
        </p>
        </div>

        <% if not current_user %>
          <p>
            <strong>Street:</strong>
            <%= @profile.street %>
          </p>
          
          <p>
            <strong>Suburb:</strong>
            <%= @profile.suburb %>
          </p>
          
          <p>
            <strong>Postcode:</strong>
            <%= @profile.postcode %>
          </p>
          
          <p>
            <strong>State:</strong>
            <%= @profile.state %>
          </p>
          
          <p>
            <strong>Country:</strong>
            <%= @profile.country %>
          </p>
          
          <p>
            <strong>Phone:</strong>
            <%= @profile.phone %>
          </p>
          
        <% end %>
      </div>
    </div>
  </div>
  
  
  <div class = "col-md-9">
    <div class = "panel panel-default">

      <div class = "panel-heading">
        <h4>My Adventures</h4>  
      </div>

      <div class = "panel-body">

        <div class = "row">
          
          <% @profile.travel_maps.each do |travel_map| %>
            <div class = "col-md-12">
              <div class = "panel panel-default">
                <div class = "panel-body">

                  <%= link_to travel_map_path(travel_map), style: "color: black;"  do %>
                        <div class="row">
                          <div class="col-md-2 text-center">
                              <%= fa_icon "map-o 3x" %>
                          </div>
                          <div class="col-md-4">
                            <p><%= travel_map.name %></p>
                          </div>
                          <div class="col-md-6">
                            <p><%= travel_map.description %></p>
                          </div>
                        </div>
                  <% end %>
            
                </div>
              </div>
            </div>
          
          <% end %>
          
        </div>
      </div>

      <div class="panel-footer">  
      <%= link_to "Add a new adventure", new_travel_map_path %>
      </div>

    </div>
  </div>
  
</div>

<p id="notice"><%= notice %></p>